---
import Base from "./Base.astro";
import Heading from "../components/blog/post/Heading.astro";
import Tags from "../components/blog/post/Tags.astro";
import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
  title: string;
  date: string;
  tags?: string[];
}>;

const { frontmatter, file, url } = Astro.props;
const basename = file.split("/").pop() || "";
---

<Base path={"blog/" + basename} title={frontmatter.title}>
  <article>
    <Heading frontmatter={frontmatter} url={url} />

    <div id="blog-post-content">
      <slot />
      <!-- <pre>{Astro.props.rawContent()}</pre> -->
    </div>

    <Tags tags={frontmatter.tags} />
  </article>
</Base>

<style lang="scss">
  @import "../variables.scss";
  article {
    width: 95%;
    max-width: 75ch;
    padding: 20px;
    // margin: 1rem 2rem;
  }
</style>

<!-- We need global styles here so that the css will
     apply to the generated markdown content inside the slot. -->
<style lang="scss" is:global>
  @import "../variables.scss";
  #blog-post-content {
    line-height: 1.5rem;
    p {
      font-size: 13pt;
      margin-top: 1.5rem;
      margin-bottom: 0;
    }
    li {
      p {
        margin-top: 0;
      }
    }
    img {
      max-width: 100%;
      border-radius: 5px;
    }
    figcaption {
      @include dimmed;
      text-align: center;
    }
    td {
      vertical-align: top;
    }
  }
</style>
