---
import Nav from "../components/Nav.astro";
import Links from "../components/Links.astro";
import Meta from "../components/Meta.astro";

export interface Props {
  isHome?: boolean;
  path?: string;
  title?: string;
  back?: string;
  description: string | null;
}
const { hideFooter = false, path, title, back, description } = Astro.props;

const pageTitle = (() => {
  if (!title) {
    return "Davis Haupt's Website";
  } else {
    return `${title} | Davis Haupt`;
  }
})();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Meta
      title={pageTitle}
      description={description || "Davis Haupt's Website"}
    />
  </head>
  <body>
    <Nav path={path} back={back} />
    <div id="main">
      <slot />
    </div>
    {
      !hideFooter ? (
        <footer>
          <Links />
        </footer>
      ) : null
    }

    <style lang="scss">
      div#main {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        margin: 1rem 2rem;
      }
      footer {
        padding-bottom: 1rem;
      }
    </style>

    <style lang="scss" is:global>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700&display=swap");
      @import "../variables.scss";
      a {
        color: $accent-color;
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }

      body {
        font-family: et-book, Palatino, "Palatino Linotype", "Palatino LT STD",
          "Book Antiqua", Georgia, serif;
        color: $text-color;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
      }
      hr {
        color: rgba(0, 0, 0, 0.2);
        border-style: solid;
        margin: 1rem 0;
      }
    </style>
  </body>
</html>
