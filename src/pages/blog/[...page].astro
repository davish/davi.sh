---
import type { CollectionEntry } from "astro:content";
import type { GetStaticPaths, Page } from "astro";
import BlogListPage from "@layouts/BlogListPage.astro";
import BlogPost from "@layouts/BlogPost.astro";
import { getBlogPosts } from "src/content/config";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getBlogPosts();
  return paginate(posts, { pageSize: 5 })
    .map(({ params, props }) => ({ params, props: { ...props, type: "list" } }))
    .concat(
      posts.map((entry) => ({
        params: { page: entry.slug },
        props: { entry, type: "single" },
      }))
    );
};

type Props =
  | { page: Page<CollectionEntry<"blog">>; type: "list" }
  | { entry: CollectionEntry<"blog">; type: "single" };

const props = Astro.props;
---

{
  props.type === "list" ? (
    <BlogListPage page={props.page} />
  ) : (
    <BlogPost {...props.entry} />
  )
}
