---
export type Props = {
  name: string;
};

const { name } = Astro.props;
---

<div>
  <h2 id="name">{name}</h2>
  <hr />
  <div class="section-content"><slot /></div>
</div>

<style lang="scss">
  @import "src/variables.scss";
  h2 {
    margin-block-end: 0;
    font-family: "Inter", sans-serif;
  }
  hr {
    margin-top: 0.2rem;
    margin-bottom: 0.75rem;
  }

  div.section-content {
    @include sans-serif;
    font-size: 0.8rem;
    @media print {
      font-size: 0.7rem;
    }
  }
</style>
