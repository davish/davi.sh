---
export type Props = {
  name: string;
};

const { name } = Astro.props;
---

<div>
  <h2 id="name">{name}</h2>
  <hr />
  <div><slot /></div>
</div>

<style lang="scss">
  h2 {
    margin-block-end: 0;
    font-family: "Inter", sans-serif;
    @media print {
      margin-block-start: 0.5em;
    }
  }
  hr {
    margin-top: 0.2rem;
    margin-bottom: 0.75rem;
    @media print {
      margin-top: 0.1em;
      margin-bottom: 0.5em;
    }
  }
</style>
