---
export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<div class="container">
  <div class="slide-title">
    <h1>
      {title}
    </h1>
  </div>
  <div class="slide-footer"><slot /></div>
</div>

<style lang="scss">
  .container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: flex-end;
  }
  .slide-title {
    width: 100%;
    text-align: center;
    flex: 1;
    display: flex;
    // flex-direction: column;
    align-items: center;
    justify-content: center;

    h1 {
      font-size: 35px;
      width: 80%;
    }
  }
  .slide-footer {
    background-color: #142231;
    color: white;
    width: 100%;
    text-align: center;
    height: 20%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
</style>
