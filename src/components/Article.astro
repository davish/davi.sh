---
export type Props = {
  hasFootnotes: boolean;
};
const { hasFootnotes } = Astro.props;
---

<article class={hasFootnotes ? "hasFootnotes" : ""}>
  <slot />
</article>

<style lang="scss">
  @import "/src/variables.scss";
  article {
    width: 95%;
    max-width: 75ch;
    padding: 20px;
    &.hasFootnotes {
      @media #{$media-size-desktop} {
        margin-left: -40ch;
      }
    }

    @media print {
      width: 100%;
      max-width: 100%;
    }
    // margin: 1rem 2rem;
  }
</style>
